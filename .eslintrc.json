{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "airbnb-base",
    "plugin:prettier/recommended"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  "plugins": [
    "prettier"
  ],
  "rules": {
    "quotes": [ "error", "single",
      { "allowTemplateLiterals": true }
    ],
    "indent": ["error", 2],
    "space-before-function-paren": [0],
    "require-jsdoc": 0,
    "prettier/prettier": "error",
    "properties": "never",
    "ignoreDestructuring": true,
    "eslint.workingDirectories": ["./server"]
  }
}